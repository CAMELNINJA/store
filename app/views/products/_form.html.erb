<%= form_with model: @product do |form| %>
<div>
    <%= form.label :name %>
    <%= form.text_field :name%>
</div>

<div>
    <%= form.label :description, style: "display: blok"%>
    <%= form.rich_text_area :description %>
</div>

<div>
    <%= form.label :featured_image, style: "display: blok"%>
    <%= form.file_field :featured_image, accept: "image/*"%>
</div>

  <div>
    <%= form.label :inventory_count, style: "display: block"%>
    <%= form.number_field :inventory_count %>
  </div>


<div> 
    <%= form.submit%>
</div>
<% end %>